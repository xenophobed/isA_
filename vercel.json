{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev", 
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "env": {
    "REACT_APP_API_ENDPOINT": "@react_app_api_endpoint",
    "REACT_APP_LOG_LEVEL": "@react_app_log_level",
    "REACT_APP_ENABLE_LOGGING_DASHBOARD": "@react_app_enable_logging_dashboard",
    "REACT_APP_ENABLE_DEBUG_MODE": "@react_app_enable_debug_mode"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "REACT_APP_LOG_LEVEL": "warn",
      "REACT_APP_ENABLE_LOGGING_DASHBOARD": "false",
      "REACT_APP_ENABLE_DEBUG_MODE": "false"
    }
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}