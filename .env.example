# ============================================================================
# Environment Configuration Example
# ============================================================================
# Copy this file to .env.local (or .env.test, .env.staging, .env.production)

# ================================================================================
# Auth0 Configuration
# ================================================================================
REACT_APP_AUTH0_DOMAIN=your-domain.us.auth0.com
REACT_APP_AUTH0_CLIENT_ID=your-client-id
REACT_APP_AUTH0_AUDIENCE=http://localhost:8100

# ================================================================================
# API Configuration
# ================================================================================
REACT_APP_EXTERNAL_API_BASE_URL=http://localhost:8100
REACT_APP_BASE_URL=http://localhost:5173
Agent_URL=http://localhost:8080

# Additional API endpoints
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_AI_SERVICE_URL=http://localhost:8080
REACT_APP_IMAGE_SERVICE_URL=https://api.replicate.com
REACT_APP_CONTENT_SERVICE_URL=https://api.openai.com

# ================================================================================
# Application Configuration
# ================================================================================
REACT_APP_NAME=isA_
REACT_APP_VERSION=1.0.0
NODE_ENV=development
REACT_APP_LOG_LEVEL=debug

# ================================================================================
# API Settings
# ================================================================================
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRIES=3
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_SUPPORTED_FILE_TYPES=jpg,jpeg,png,pdf,txt,md,json

# ================================================================================
# Feature Flags
# ================================================================================
REACT_APP_ENABLE_AUTH=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_REAL_TIME_CHAT=true
REACT_APP_ENABLE_WIDGETS=true
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_LOGGING_DASHBOARD=true

# ================================================================================
# Deployment Configuration
# ================================================================================
VERCEL_ENV=development

# ================================================================================
# Production/Staging Overrides (uncomment as needed)
# ================================================================================
# For .env.production:
# REACT_APP_LOG_LEVEL=warn
# REACT_APP_ENABLE_DEBUG_MODE=false
# REACT_APP_ENABLE_LOGGING_DASHBOARD=false
# REACT_APP_EXTERNAL_API_BASE_URL=https://your-production-api.com
# Agent_URL=https://your-production-agent.com

# For .env.staging:
# REACT_APP_LOG_LEVEL=info
# REACT_APP_EXTERNAL_API_BASE_URL=https://your-staging-api.com
# Agent_URL=https://your-staging-agent.com